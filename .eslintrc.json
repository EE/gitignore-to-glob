{
    "root": true,

    "extends": "mgol",

    "env": {
        "node": true
    },

    "rules": {
        // Rules are divided into sections from http://eslint.org/docs/rules/

        // Stylistic issues
        "id-blacklist": [2, "event"], // TODO enable when support for Node 4 is dropped

        // ECMAScript 6
        "prefer-reflect": 0, // TODO enable when support for Node 4 is dropped
        "prefer-rest-params": 0 // TODO enable when support for Node 4 is dropped
    }
}
